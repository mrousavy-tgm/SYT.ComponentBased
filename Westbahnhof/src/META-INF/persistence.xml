<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
   <persistence-unit name="westbahn">
    	<properties>
            <!-- MySQL -->
  	 		<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
  	 		<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/westbahn" />
   			<property name="hibernate.connection.username" value="westbahnUser" />
   			<property name="hibernate.connection.password" value="westbahnPassword" />
   			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLInnoDBDialect" />

   			<property name="hibernate.show_sql" value="false" />
   			<property name="hibernate.hbm2ddl.auto" value="create"/>
   		</properties>
   </persistence-unit>
</persistence>
